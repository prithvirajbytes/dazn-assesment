{
  "compilerOptions": {
    "types": ["node", "express", "express-session", "jest"],
    "target": "ES6",
    "module": "CommonJS",
    "rootDir": "./src",
    "outDir": "./dist",
    "esModuleInterop": true,
    "strict": true,
    "moduleResolution": "Node",
    "typeRoots": ["./node_modules/@types", "./src/types"]
  },
  "include": ["src/**/*.ts", "src/types/*.d.ts", "src/config/sessionStore.ts"]
}
